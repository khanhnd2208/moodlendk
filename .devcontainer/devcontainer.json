{
  "name": "Moodle 5.0.1 Development Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "php",
  "workspaceFolder": "/workspace",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "ms-vscode.vscode-json",
        "formulahendry.auto-rename-tag",
        "bradlc.vscode-tailwindcss",
        "christian-kohler.path-intellisense",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-php-debug",
        "xdebug.php-debug",
        "formulahendry.code-runner",
        "ms-vscode.sublime-commands"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.files.maxSize": 5000000,
        "files.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/.git": true
        }
      }
    }
  },
  
  "forwardPorts": [8080, 3306, 80, 443, 8081],
  
  "portsAttributes": {
    "8080": {
      "label": "Moodle Development Server",
      "onAutoForward": "notify"
    },
    "80": {
      "label": "Nginx Server",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL Database",
      "onAutoForward": "ignore"
    },
    "8081": {
      "label": "phpMyAdmin",
      "onAutoForward": "silent"
    }
  },
  
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "echo 'ðŸš€ Moodle 5.0.1 Codespace is ready!'",
  
  "remoteUser": "vscode"
}
