{
  "name": "Moodle 5.0.1 Development Environment",
  "image": "mcr.microsoft.com/devcontainers/php:8.1",
  "workspaceFolder": "/workspaces/moodlendk",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "ms-vscode.vscode-json",
        "ms-vscode.vscode-php-debug",
        "formulahendry.code-runner"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "intelephense.files.maxSize": 5000000,
        "files.exclude": {
          "**/node_modules": true,
          "**/vendor": true,
          "**/.git": true
        }
      }
    }
  },
  
  "forwardPorts": [8080, 3306],
  
  "portsAttributes": {
    "8080": {
      "label": "Moodle Development Server",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL Database",
      "onAutoForward": "ignore"
    }
  },
  
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "echo 'ðŸš€ Moodle 5.0.1 Codespace is ready!'",
  
  "remoteUser": "vscode"
}
